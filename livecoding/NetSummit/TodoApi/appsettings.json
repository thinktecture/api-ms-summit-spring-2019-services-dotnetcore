{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning",
        "TodoApi": "Verbose"
      }
    }
  },
  "AllowedHosts": "*",
  "IdentityServer": {
    "Url": "http://localhost:5000",
    "Audience": "todoapi"
  },
  "ConnectionStrings": {
    "sqlserver": "Data Source=.;Database=apisummittodos;User Id=sa;Password=<Strong!Passw0rd>"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": false,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-Client-Id",
    "HttpStatusCode": 429,
    "IpWhitelist": [],
    "EndpointWhitelist": [],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "10s",
        "Limit": 20
      },
      {
        "Endpoint": "*",
        "Period": "10m",
        "Limit": 100
      },
      {
        "Endpoint": "*",
        "Period": "7d",
        "Limit": 10000
      }
    ]
  },
  "PushServer": {
    "Url":  "http://localhost:5002" 
  }
}
